<!DOCTYPE form-validation PUBLIC
     "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.4.0//EN"
     "http://commons.apache.org/dtds/validator_1_4_0.dtd">
<form-validation>
	<formset>

		<form name="addWorker">
			<field property="workerName" depends="required">
				<arg key="worker.workerName" />
			</field>
			<field property="address" depends="required">
				<arg key="worker.address" />
			</field>
		</form>

	</formset>
</form-validation>
